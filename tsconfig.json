{
  "//": "https://nuxt.com/docs/guide/concepts/typescript",
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",  
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "#app": ["./.nuxt/types/app"],
      "#app/*": ["./.nuxt/types/app/*"]
    }
  },
  "include": [
    "components/**/*",
    "layouts/**/*",
    "pages/**/*",
    "stores/**/*",
    "middleware/**/*",
    "plugins/**/*",
    "nuxt.config.ts"
  , "server/**/*"
  ]
}
